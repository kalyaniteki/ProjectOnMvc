@model MVCProject.Models.Seller

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewData["Title"] = "Login";

}




   
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login" class="container">
                <h1>Login</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SName" class="control-label"></label>
                    <input asp-for="SName" class="form-control" />
                    <span asp-validation-for="SName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pass" class="control-label"></label>
                    <input asp-for="Pass" class="form-control" />
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Register">Back to List</a>
                </div>

            </form>
        </div>
    </div>

   

